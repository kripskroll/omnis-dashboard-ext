{
  "name": "omnis-dashboard-ext",
  "version": "0.1.0",
  "type": "module",
  "description": "MCP ext-app server for network health visualization dashboards",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/omnis-dashboard-ext"
  },
  "license": "MIT",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:ui && npm run build:server",
    "build:ui": "cross-env INPUT=src/apps/health-dashboard/mcp-app.html vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "watch:ui": "cross-env INPUT=src/apps/health-dashboard/mcp-app.html vite build --watch",
    "dev": "concurrently \"npm run watch:ui\" \"npm run serve:http\"",
    "serve:http": "tsx watch src/main.ts",
    "serve:stdio": "tsx src/main.ts --stdio",
    "start": "npm run start:http",
    "start:http": "cross-env NODE_ENV=production npm run build && tsx src/main.ts",
    "start:stdio": "cross-env NODE_ENV=production npm run build && tsx src/main.ts --stdio",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.server.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@clickhouse/client": "^1.0.0",
    "neo4j-driver": "^5.18.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zod": "^3.23.0",
    "@tremor/react": "^3.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-singlefile": "^2.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "omnis-dashboard": "dist/index.js"
  }
}
